<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created By ChrisJaunes\n本实验用于初步学习安卓service和多线程机制"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="必做实验"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实验一"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btn_exp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实验二"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_exp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实验三"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_exp4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实验四"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_exp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实验五"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自选实验"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_expA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载实验"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btn_expB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="音乐播放实验"
        tools:ignore="HardcodedText" />
</LinearLayout>