<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".example.Exp1Activity">
    <Button
        android:id="@+id/btn_exp1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建一条基本通知"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建一条自定义时间戳的通知"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp1_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建一条不显示时间戳的通知"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp1_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建一条拥有大图标的通知"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp1_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建一条拥有大文本的通知"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp1_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建一条拥有大图片的通知"
        tools:ignore="HardcodedText"/>
</LinearLayout>