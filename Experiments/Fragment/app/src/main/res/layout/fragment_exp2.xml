<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".example.ExpFragment2">

    <Button
        android:id="@+id/btn_exp3_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试与Activity的通讯"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp3_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试与Activity的通讯,通过回调"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp3_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试Fragment的通讯"
        tools:ignore="HardcodedText"/>
    <TextView
        android:id="@+id/tv_exp3_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment" />
    <fragment
        android:id="@+id/fragment_exp3_2"
        android:name="com.chrisjaunes.android_teaching.fragment.example.ExpFragment4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>