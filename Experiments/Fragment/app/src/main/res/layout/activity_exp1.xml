        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="弹出一个EmptyActivity"
        tools:ignore="HardcodedText"/>
    <fragment
        android:id="@+id/fragment_exp1"
        android:name="com.chrisjaunes.android_teaching.fragment.example.ExpFragment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

