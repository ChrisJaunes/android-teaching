<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".example.Exp2Activity">
    <Button
        android:id="@+id/btn_exp2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为Left添加ExpFragment1"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="替换Left为ExpFragment1"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp2_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="替换Left为ExpFragment1\n不入返回栈"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp2_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="替换Left为ExpFragment1\n替换Right为ExpFragment1"
        tools:ignore="HardcodedText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/fl_exp4_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/fl_exp4_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>