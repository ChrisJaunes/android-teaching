<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".example.Exp1Activity">
    <Button
        android:id="@+id/btn_exp1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送一条隐式无序广播"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送一条显式无序广播"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp1_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送一条隐式广播,接收者为静态内部类"
        tools:ignore="HardcodedText"/>
    <Button
        android:id="@+id/btn_exp1_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送一条显示广播,接收者为静态内部类"
        tools:ignore="HardcodedText"/>

</LinearLayout>